<div class="card comment-card">
  <div class="card-body">
    <div class="row">
      <% if comment.parent_id.blank? %>
        <div class="col-md-1">
          <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid img-cmt"/>
        </div>
        <div class="col-md-11">
          <div class="clearfix"></div>
          <p>
            <a class="float-left" href="#"><strong><%= comment.name %></strong></a>
          </p>
          <p>
            <%= comment.content %>
          </p>
          <p class = "func-button">
            <%= link_to 'reply', new_comment_path(parent_id: comment.id), remote: true, class: 'btn btn-primary' %>
            <%= link_to 'edit', edit_comment_path(id: comment.id), remote: true ,class: "btn btn-primary" %>
            <%= link_to "destroy",comment_path(comment.id), method: :delete, data: { confirm: "ban co muon xoa comment" }, class: "btn btn-danger"%>
          </p>
          <p>
            <%= comment.created_at %>
          </p>
        </div>
      <% end %>
      <div class="reply">
        <div id="reply-form-<%= comment.id %>"></div>
        <div id="edit-form-<%= comment.id %>"></div>
        <% if comment.replies.any? %>
          <% comment.replies.each do |reply| %>
            <%= render partial: 'comments/reply', locals: { reply: reply } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
