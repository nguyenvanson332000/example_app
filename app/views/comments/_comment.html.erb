<div class="card comment-card">
  <div class="card-body">
    <div class="row col-border">
      <% if comment.parent_id.blank? %>
        <div class="col-md-1">
          <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid img-cmt"/>
        </div>
        <div class="col-md-11">
          <div class="clearfix"></div>
          <p>
            <a class="float-left" href="#"><strong><%= comment.name %></strong></a>
          </p>
          <p>
            <%= comment.content %>
            <%= link_to 'reply', new_comment_path(parent_id: comment.id), remote: true, class: 'd-block float-right btn btn-outline-primary ml-2' %>
          </p>
          <p>
            <%= comment.created_at %>
          </p>
        </div>
      <% end %>
      <div class="reply">
        <div id="reply-form-<%= comment.id %>"></div>
        <% if comment.replies.any? %>
          <% comment.replies.each do |reply| %>
            <%= render partial: 'comments/reply', locals: { reply: reply } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
