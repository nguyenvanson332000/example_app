<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <li><%= link_to t(".about"), about_path %></li>
        <li><%= link_to "English", locale:"en" %></li>
        <li><%= link_to "Vietnamese", locale:"vi" %></li>
        <% if logged_in? %>
          <li><%= link_to t(".Users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t".Account"%> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".Profile"), current_user %></li>
              <li><%= link_to t(".Settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".Logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
